---
interface Resource {
  title: string;
  type: string;
  url: string;
  affiliate: boolean;
}

interface Props {
  id: string;
  title: string;
  description: string;
  type: string;
  resources: Resource[];
  skills: string[];
  estimatedHours: number;
  roadmapId: string;
}

const { id, title, description, type, resources, skills, estimatedHours, roadmapId } = Astro.props;
const nodeKey = `${roadmapId}-${id}`;
---

<div class="roadmap-node" data-node-id={nodeKey}>
  <div class="node-header">
    <h4 class="node-title">{title}</h4>
    <label class="node-checkbox">
      <input type="checkbox" data-node-key={nodeKey} class="progress-checkbox" />
      <span class="checkbox-custom"></span>
    </label>
  </div>

  <p class="node-description">{description}</p>

  <div class="node-meta">
    <span class="node-hours">{estimatedHours}h</span>
    {type === 'core' ? <span class="badge badge-primary">Core</span> : <span class="badge badge-purple">Optional</span>}
  </div>

  <div class="node-skills">
    {skills.map((skill) => (
      <span class="skill-tag">{skill}</span>
    ))}
  </div>

  {resources.length > 0 && (
    <details class="node-resources">
      <summary>Resources ({resources.length})</summary>
      <ul class="resource-list">
        {resources.map((resource) => (
          <li class="resource-item">
            <a
              href={resource.url}
              target="_blank"
              rel={resource.affiliate ? "noopener sponsored" : "noopener"}
              class="resource-link"
            >
              <span class="resource-icon">
                {resource.type === 'book' ? 'ðŸ“š' : resource.type === 'course' ? 'ðŸŽ“' : 'ðŸ”§'}
              </span>
              <span class="resource-title">{resource.title}</span>
              {resource.affiliate && <span class="resource-badge">Recommended</span>}
            </a>
          </li>
        ))}
      </ul>
    </details>
  )}
</div>

