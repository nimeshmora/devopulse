---
import BaseLayout from '../../layouts/BaseLayout.astro';
import RoadmapPath from '../../components/RoadmapPath.astro';
import roadmapData from '../../data/roadmaps/cloud-engineer.json';
---

<BaseLayout
  title={roadmapData.title}
  description={roadmapData.description}
  keywords="cloud engineer roadmap, aws career path, azure, gcp, cloud architecture, cloud computing"
>
  <div class="roadmap-page">
    <section class="roadmap-hero">
      <div class="container">
        <div class="hero-content">
          <div class="hero-badge">
            <span class={`badge badge-${roadmapData.difficulty === 'Beginner' ? 'success' : roadmapData.difficulty === 'Intermediate' ? 'primary' : 'purple'}`}>
              {roadmapData.difficulty}
            </span>
            <span class="hero-time">{roadmapData.estimatedTime}</span>
          </div>

          <h1 class="hero-title">
            <span class="gradient-text">{roadmapData.title}</span> Roadmap
          </h1>

          <p class="hero-description">{roadmapData.description}</p>

          <div class="salary-info">
            <div class="salary-card">
              <span class="salary-label">Junior</span>
              <span class="salary-amount">{roadmapData.salary.junior}</span>
            </div>
            <div class="salary-card">
              <span class="salary-label">Mid-Level</span>
              <span class="salary-amount">{roadmapData.salary.mid}</span>
            </div>
            <div class="salary-card">
              <span class="salary-label">Senior</span>
              <span class="salary-amount">{roadmapData.salary.senior}</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="section">
      <div class="container container-narrow">
        <RoadmapPath roadmapData={roadmapData} />
      </div>
    </section>

    {roadmapData.relatedPaths && roadmapData.relatedPaths.length > 0 && (
      <section class="section related-paths">
        <div class="container">
          <h2 class="text-center mb-8">Related Career Paths</h2>
          <div class="related-grid">
            {roadmapData.relatedPaths.map((pathId: string) => (
              <a href={`/roadmaps/${pathId}/`} class="related-card glass-card">
                <h3>{pathId.split('-').map(w => w.charAt(0).toUpperCase() + w.slice(1)).join(' ')}</h3>
                <span class="arrow">â†’</span>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}
  </div>
</BaseLayout>

<style>
  .roadmap-page { min-height: 100vh; }
  .roadmap-hero { background: var(--color-bg-secondary); border-bottom: 1px solid var(--color-bg-tertiary); padding: var(--spacing-16) 0 var(--spacing-12); position: relative; overflow: hidden; }
  .roadmap-hero::before { content: ''; position: absolute; top: 0; left: 0; right: 0; height: 4px; background: var(--gradient-card); }
  .hero-content { max-width: 800px; margin: 0 auto; text-align: center; }
  .hero-badge { display: flex; gap: var(--spacing-3); justify-content: center; margin-bottom: var(--spacing-4); }
  .hero-time { font-size: var(--text-sm); color: var(--color-text-muted); font-weight: 600; background: rgba(139, 92, 246, 0.1); padding: var(--spacing-2) var(--spacing-4); border-radius: var(--radius-full); }
  .hero-title { font-size: var(--text-5xl); font-weight: 900; margin-bottom: var(--spacing-4); }
  .hero-description { font-size: var(--text-xl); color: var(--color-text-muted); margin-bottom: var(--spacing-8); }
  .salary-info { display: grid; grid-template-columns: repeat(3, 1fr); gap: var(--spacing-4); max-width: 600px; margin: 0 auto; }
  .salary-card { background: var(--glass-bg); border: 1px solid var(--glass-border); border-radius: var(--radius-lg); padding: var(--spacing-4); display: flex; flex-direction: column; gap: var(--spacing-2); }
  .salary-label { font-size: var(--text-xs); color: var(--color-text-subtle); text-transform: uppercase; letter-spacing: 0.05em; }
  .salary-amount { font-size: var(--text-lg); font-weight: 700; color: var(--color-accent-green); }
  .related-paths { background: var(--color-bg-secondary); border-top: 1px solid var(--color-bg-tertiary); }
  .related-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: var(--spacing-4); max-width: 800px; margin: 0 auto; }
  .related-card { padding: var(--spacing-6); text-decoration: none; display: flex; justify-content: space-between; align-items: center; }
  .related-card h3 { font-size: var(--text-lg); color: var(--color-text); margin: 0; }
  .related-card .arrow { font-size: var(--text-2xl); color: var(--color-primary-500); transition: transform var(--transition-base); }
  .related-card:hover .arrow { transform: translateX(4px); }
  @media (max-width: 768px) {
    .hero-title { font-size: var(--text-3xl); }
    .hero-description { font-size: var(--text-lg); }
    .salary-info { grid-template-columns: 1fr; }
  }
</style>
